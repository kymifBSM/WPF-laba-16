<Page x:Class="WPF_laba_16.Credits"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_laba_16"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Credits">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label Content="Данная программа демонстрирует работу с несколькими окнами" Margin="5,5,5,5" HorizontalAlignment="Center"/>
            <Button Content="Закрыть" Style="{StaticResource btnStyle}" Margin="5,10,5,5" Click="Exit"/>
        </StackPanel>
    </Grid>
</Page>
